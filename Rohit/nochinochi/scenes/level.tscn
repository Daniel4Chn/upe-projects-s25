#initalizes dice face
var dice_faces = []


# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	for i in range(1, 7):  # Dice faces 1 to 6
		dice_faces.append(load(\"res://assets/dice_%d.png\" % i))


# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(delta: float) -> void:
	pass


# Called at the start of the round. Rolls a number of dice and returns the result.
func _roll(num_dice: int) -> void:
	#clears previous visuals
	for child in get_children():
		if child is Sprite2D:
			child.queue_free()

#rolls dice and creates visuals
	var result = []
	for i in range(num_dice):
		var roll_result = randi() % 6 + 1
		var sprite = Sprite2D.new()
		sprite.texture = dice_faces[roll_result]
		sprite.position = Vector2(50 + (i * 70), 100)
		add_child(sprite)
"

